{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center my-4 center-title">User index</h1>
    <div class="container center-content">
        <a href="{{ path('app_user_new') }}" class="btn btn-success mb-3">Create new</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered shadow-sm text-center">
                <thead class="thead-dark text-center">
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Roles</th>
                        <th class="text-center">Password</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="text-center">
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="text-center">
                        <td colspan="5">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
