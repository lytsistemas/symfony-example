{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="center-title">User</h1>

    <table class="table table-striped table-bordered shadow-sm">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-actions right-aligned">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">edit</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
